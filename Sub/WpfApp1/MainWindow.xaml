<Window x:Class="LiveSubtitlesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live Subtitles with Speech-to-Text" Height="300" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <!-- Текст субтитров -->
        <TextBlock x:Name="SubtitlesTextBlock"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="24"
                   Foreground="White"
                   TextWrapping="Wrap"
                   Text="Субтитры появятся здесь..."
                   TextAlignment="Center"
                   Margin="0,0,0,50"
                   Background="#80000000"/>
        <!-- Полупрозрачный фон -->

        <!-- Кнопки управления -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" Margin="0,0,0,5"/>
            <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click"/>
        </StackPanel>
    </Grid>
</Window>